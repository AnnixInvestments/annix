# JWT Configuration
JWT_SECRET=your_generated_secret_here
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=annix-api
JWT_AUDIENCE=annix-app

# Admin User Setup (required for initial migration)
ADMIN_INITIAL_PASSWORD=your_secure_admin_password_here

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=55432
DATABASE_USERNAME=annix_user
DATABASE_PASSWORD=annix_password
DATABASE_NAME=annix_db

# Application Configuration
NODE_ENV=development
PORT=4001

# Security - Device Fingerprinting
# Set to 'true' to disable device fingerprint verification (development only)
DISABLE_DEVICE_FINGERPRINT=true

# File Upload Configuration
UPLOAD_DIR=./uploads
API_BASE_URL=http://localhost:4001

# Storage Configuration
# Options: 'local' (default) or 's3'
STORAGE_TYPE=local

# For Docker PostgreSQL setup
DATABASE_HOST=localhost
DATABASE_PORT=55432
DATABASE_USERNAME=annix_user
DATABASE_PASSWORD=annix_password
DATABASE_NAME=annix_db

# External API Keys (add as needed)
# GOOGLE_API_KEY=your_google_api_key_here
# OPENAI_API_KEY=your_openai_api_key_here
# SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here

# AWS S3 Configuration (required when STORAGE_TYPE=s3)
# AWS_ACCESS_KEY_ID=your_aws_access_key_here
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
# AWS_REGION=af-south-1
# AWS_S3_BUCKET=annix-sync-files-production
# AWS_S3_URL_EXPIRATION=3600

# Email Service Configuration
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password_here
# EMAIL_FROM=noreply@annix.com

# Frontend URL (for email verification links)
FRONTEND_URL=http://localhost:3000